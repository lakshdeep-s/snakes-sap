generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  dailyExpenses   DailyExpense[]
  monthlyExpenses MonthlyExpense[]
  dailyIncomes    DailyIncome[]
  monthlyIncomes  MonthlyIncome[]
}

model DailyExpense {
  id        String   @id @default(uuid())
  date      DateTime
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model MonthlyExpense {
  id        String   @id @default(uuid())
  month     Int
  year      Int
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model DailyIncome {
  id        String   @id @default(uuid())
  date      DateTime
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model MonthlyIncome {
  id        String   @id @default(uuid())
  month     Int
  year      Int
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}